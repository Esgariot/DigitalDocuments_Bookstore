<Window x:Class="GUI_Prototype.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_Prototype"
        mc:Ignorable="d"
        Title="Dokumenty Cyfrowe" 
        Height="{StaticResource WindowHeight}" 
        Width="{StaticResource WindowWidth}"
        ResizeMode="CanMinimize"
        Background="{StaticResource BackgroundPrimaryBrush}"
        WindowStartupLocation="CenterScreen"
        >
    <Window.Resources>
        <Style x:Key="myLabelStyle" TargetType="{x:Type Label}">
            <Setter Property="FontSize" Value="25" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="Red" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <TabControl Margin="0,0,10,17" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <TabItem Header="Skrzynka" Margin="0,0,-72,0" Width="auto">
                <ListView Name="MailList" HorizontalAlignment="Left" Height="340" Margin="48,0,0,0" Width="634" SelectionChanged="MailList_SelectionChanged">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}"/>
                            <GridViewColumn Header="From" DisplayMemberBinding="{Binding From}"/>
                            <!--<GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}"/>-->
                            <GridViewColumn Header="State" DisplayMemberBinding="{Binding State}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Header="Wiadomość" Margin="70,0,-142,0" Width="Auto">
                <Grid HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="100">
                    <Label Grid.Column="0"
            Style="{StaticResource LabelBorderBottom}"
            Width="300" Height="30"
            Margin="50,31,-250,-21"
            HorizontalAlignment="Left"
            HorizontalContentAlignment="Left"
            Content="Nadawca:"
            />

                    <TextBlock 
                        Style="{StaticResource BaseTextBlockStyle}"
                        Width="650"
                        Margin="48,69,-598,-394"
                        Background="White"
                        Foreground="Black"
            ><InlineUIContainer>
                            <Label Content="Label"/>
                        </InlineUIContainer><Run Text="&#xA;&#xA;             Przykładowy email od klienta"/></TextBlock>
                </Grid>
            </TabItem>
        </TabControl>

        <StackPanel
            Grid.Row="2" Grid.ColumnSpan="2"
            Width="650" Height="40"
            Margin="50 0"
            Orientation="Horizontal"
            >

            <Label
                Style="{StaticResource LabelBorderless}"
                Width="100" Height="40"
                Content="Załączniki:"
                />

            <StackPanel 
                Name="AttachmentsPanel"
                Width="528" Height="40"
                Margin="20 0"
                Orientation="Horizontal"
                >

                <!--<Border
                    Name="TemplateIcon"
                    Visibility="Hidden"
                    BorderBrush="Black" BorderThickness="0"
                    Background="#222930">

                    <Image Source="Resources/Icons/pdf_icon.png"
                           Width="32" Height="32"
                           />

                </Border>-->
            </StackPanel>

        </StackPanel>

        <Button
            Style="{StaticResource FailsBtn}"
            Grid.Row="3" Grid.Column="0"
            Content="Odrzuć"
            Click="Button_Click"
            />

        <Button
            Style="{StaticResource SuccessBtn}"
            Grid.Row="3" Grid.Column="1"
            Content="Zaakceptuj"
            />

        <Grid 
            Grid.Row="1" Grid.Column="2"
            Margin="0 50"
            >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button
                Grid.Row="0"
                Content="Przygotuj szablon"
                Margin="0 10"
                />

            <Button
                Grid.Row="1"
                Content="Zatwierdź szablon"
                Margin="0 10"
                />

            <Button
                IsEnabled="False"
                Grid.Row="2"
                Content="Dodaj produkty"
                Margin="0 10"
                />

            <Button
                IsEnabled="False"
                Grid.Row="3"
                Content="Zatwierdź produkty"
                Margin="0 10"
                />

            <Button
                IsEnabled="False"
                Grid.Row="4"
                Content="Zakończ ofertę"
                Margin="0 10"
                />

        </Grid>
    </Grid>
</Window>
